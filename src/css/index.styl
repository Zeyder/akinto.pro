@import './_variables.styl';

:root {
    font-size: 62.5%;
}

* {
    &, &:before, &:after {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        -webkit-tap-highlight-color: transparent;
        user-select: none;
    }
}

body {
    background-color: $body-background;
    font-family: 'Montserrat', 'Open Sans', sans-serif;
    font-weight: 400;
    font-size: 1rem;
    overflow-x: hidden;
}

button {
    background: transparent;
    border: 0;
    font-weight: 500;
}

button, a {
    cursor: pointer;
    text-decoration: none;
}

input, textarea, button, a, img {
    outline: none;
}

input, textarea, button {
    font-family: 'Montserrat', 'Open Sans', sans-serif;
    font-size: 1.6rem;
}

h1,h2,h3 {
    font-weight: 500;
}
